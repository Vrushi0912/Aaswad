<script>
  document.addEventListener("DOMContentLoaded", function() {
    // Function to open social media links in a new tab
    function openInNewTab(url) {
      window.open(url, '_blank');
    }

    // Attach event listeners to each icon
    const facebookIcon = document.getElementById("facebook-icon");
    const twitterIcon = document.getElementById("twitter-icon");
    const instagramIcon = document.getElementById("instagram-icon");
    const linkedinIcon = document.getElementById("linkedin-icon");

    if (facebookIcon) {
      facebookIcon.addEventListener("click", function(event) {
        event.preventDefault();  // Prevent default anchor behavior
        openInNewTab("https://www.facebook.com/profile.php?id=100095689054459");
      });
    }

    if (twitterIcon) {
      twitterIcon.addEventListener("click", function(event) {
        event.preventDefault();
        openInNewTab("https://twitter.com/VrushketM31712?t=wsWoGu-nmFc1JuRYQNN-7g&s=09");
      });
    }

    if (instagramIcon) {
      instagramIcon.addEventListener("click", function(event) {
        event.preventDefault();
        openInNewTab("https://www.instagram.com/__vrushii__/profilecard/?igsh=MWJ0OG1rOHhoNWY3dw==");
      });
    }

    if (linkedinIcon) {
      linkedinIcon.addEventListener("click", function(event) {
        event.preventDefault();
        openInNewTab("https://www.linkedin.com/in/vrushket-mulye-a5468a287/");
      });
    }
  });
</script>



